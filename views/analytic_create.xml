<odoo>
    <record id="view_analytic_result_form" model="ir.ui.view">
        <field name="name">analytic.result.form</field>
        <field name="model">analytic.result</field>
        <field name="arch" type="xml">
            <form string="Résultat Analytique">
                <sheet>
                    <group>
                        <field name="exploitation"/>
                        <field name="mois"/>
                        <field name="annee"/>
                        <field name="code_projet"/>
                        <field name="libelle"/>
                        <field name="marche_initial"/>
                        <field name="travaux_supplementaires"/>
                        <field name="fact_compta_cumulee"/>
                        <field name="od_facture"/>
                        <field name="non_facture"/>
                        <field name="trop_facture"/>
                    </group>
                    <group string="Calculs Dynamiques">
                        <field name="activite_cumulee" readonly="1"/>
                        <field name="pourcentage_avancement" readonly="1"/>
                        <field name="deb_compta_cumulees"/>
                        <field name="total_debourses" readonly="1"/>
                        <field name="resultat_chantier_cumule" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_analytic_result_list" model="ir.ui.view">
        <field name="name">analytic.result.list</field>
        <field name="model">analytic.result</field>
        <field name="arch" type="xml">
            <list>
                <field name="exploitation"/>
                <field name="mois"/>
                <field name="annee"/>
                <field name="code_projet"/>
                <field name="libelle"/>
                <field name="activite_cumulee" sum="Total Activité Cumulée"/>
                <field name="pourcentage_avancement"/>
                <field name="deb_compta_cumulees"/>
                <field name="total_debourses"/>
                <field name="resultat_chantier_cumule"/>
            </list>
        </field>
    </record>
</odoo>
