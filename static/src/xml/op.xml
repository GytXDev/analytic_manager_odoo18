<templates xml:space="preserve">
    <t t-name="owl.AnalyticDashboard" owl="1">
        <div class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
            <div class="container-fluid py-2">
                <!-- Title -->
                <div class="ms-3">
                    <h3 class="mb-0 h4 font-weight-bolder">Module de gestion analytique</h3>
                    <br />
                </div>
                <!-- Stat Cards -->
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h6>Resultat chantier total</h6>
                            </div>
                            <div class="card-body">
                                 <p><t t-esc="state.resultatChantierTotal" /> CFA</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h6>Progression moyenne</h6>
                            </div>
                            <div class="card-body">
                                <p><t t-esc="state.progressionMoyenne" />%</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
